<script>
async function sendDataLike(action,postid, likerUserid) {
  try {
    await fetch('/likeapost', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        action:action,
        postid:postid,
        likerUser:likerUserid
      })
    });

    // Reload page after sending
    window.location.reload();

  } catch (err) {
    console.error(err);
    alert('Error sending data to server');
  }


}
</script>
