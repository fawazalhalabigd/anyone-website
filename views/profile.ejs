<script>
async function sendData(action,MainUsernamevar, likerUservar) {
  try {
    await fetch('/profile', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        action:action,
        MainUsername:MainUsernamevar,
        likerUser:likerUservar
      })
    });

    // Reload page after sending
    window.location.reload();

  } catch (err) {
    console.error(err);
    alert('Error sending data to server');
  }


}
</script>
<script>
async function sendDataLike(action,postid, likerUserid) {
